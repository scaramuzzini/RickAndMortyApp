<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RickAndMortyApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.RickAndMortyApp" parent="Base.Theme.RickAndMortyApp" />

    <!-- Style for character name -->
    <style name="CharacterNameStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for character status and species -->
    <style name="CharacterSubTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Style for labels like 'Last known location:' -->
    <style name="CharacterLabelStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/lightGray</item>
    </style>

    <!-- Style for character location and first seen episode -->
    <style name="CharacterInfoTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>